            variable tmp = get_ini_section(fo2tweaks_ini, sec_keymap);
            keymap = {};
            foreach (variable k: v in tmp) begin
                ndebug("remapping key " + v + " to " + k);
                variable k_code = char_to_dik(k);
                variable v_code = char_to_dik(v);
                keymap[v_code] = k_code;
                ndebug("remapped key code " + v_code + " to " + k_code);
