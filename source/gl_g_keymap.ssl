procedure keypress_handler() begin
    variable pressed = get_sfall_arg;
    variable key = get_sfall_arg;
    variable new_key = scan_array(keymap, key);
    if (get_game_mode bwand SAVEGAME and not (new_key == DIK_F4 or new_key == DIK_F6)) then begin
        return;
    end
    if (new_key != -1) then begin
        if (pressed) then begin
            ndebug("pressed key " + key + " changed to " + new_key);
        end else begin
            ndebug("released key " + key + " changed to " + new_key);
        end
        set_sfall_return(new_key);
        return;
    end
    if (keymap[key] != 0) then begin
